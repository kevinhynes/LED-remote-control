    AddFavoriteButton:
        id: add_btn_
        on_release: root.add_favorite()


<AddFavoriteButton>:
    icon: 'plus'
    style: 'outlined'
    size_hint: (None, 0.9)
    width: self.height
    rounded_button: True
    line_color: app.theme_cls.bg_light
    line_width: dp(0.5)


<FavoriteButton>:
    size_hint: (None, 0.9)
    width: self.height
    rounded_button: True
    line_color: app.theme_cls.bg_light
    line_width: dp(0.5)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.2  # Shadow color (adjust opacity as needed)
        Ellipse:
            pos: self.x + dp(2), self.y - dp(2)  # Adjust shadow position
            size: self.width, self.height


