<FavoritesBar>:
    id: favorites_bar_
    pos_hint: {'bottom': 0}
    size_hint: (1, None)
    height: dp(40)
    adaptive_width: True
    orientation: 'horizontal'
    spacing: dp(7)
    padding: dp(10), dp(2), dp(0), dp(2)
    MDBoxLayout:
        id: favorites_
        adaptive_width: True
        spacing: dp(7)
