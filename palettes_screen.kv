<PalettesScreen>:
    grid: grid_
    MDScrollView:
        do_scroll_x: False
        scroll_distance: dp(150)
        MDList:
            id: grid_
            spacing: dp(5)


<PaletteController>:
    orientation: 'horizontal'
    size_hint: (1, None)
    height: dp(50)
    padding: dp(20), dp(0), dp(0), dp(0)
    md_bg_color: app.theme_cls.primary_color


<PaletteWidget>:
    pos_hint: {'x': 0.1, 'center_y': 0.5}
    size_hint: (0.5, 0.75)
    md_bg_color: (1, 0, 0, 0.2)
#    canvas:
#        Color:
#            rgba: (0, 0, 0, 0.2)
#        RoundedRectangle:
#            pos: (self.x + dp(4), self.y - dp(3))
#            size: self.size


<PaletteControls>:
    mirror_btn: mirror_btn_
    blend_btn: blend_btn_
    select_btn: select_btn_
    orientation: 'rl-tb'
    rows: 1
    size_hint: (0.5, 1)
    MDIconButton:
        id: select_btn_
        icon: 'checkbox-blank-outline'
        theme_icon_color: 'Custom'
        icon_color: 'black'
        on_press: root.update_selected()
    MDIconButton:
        id: mirror_btn_
        icon: 'data/flip.png'
        theme_icon_color: 'Custom'
        icon_color: 'black'
        on_press: root.update_mirroring()
    MDIconButton:
        id: blend_btn_
        icon: 'blur-linear'
        theme_icon_color: 'Custom'
        icon_color: 'black'
        on_press: root.update_blended()

