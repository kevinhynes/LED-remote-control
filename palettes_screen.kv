<PalettesScreen>:
    MDScrollView:
        do_scroll_x: False
        scroll_distance: dp(150)
        PalettesList:
            id: palettes_list_
            spacing: dp(5)


<PalettesList>:
    spacing: dp(5)


<PaletteController>:
    orientation: 'vertical'
    size_hint_y: None
    height: dp(95)
    padding: dp(10), dp(10)
    spacing: dp(10)
    md_bg_color: app.theme_cls.primary_color


<PaletteWidget>:
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: (0.85, 1)


<PaletteControls>:
    id: control_bar_
    adaptive_size: True
    orientation: 'lr-tb'
    rows: 1
    size_hint_y: 0.75
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    spacing: dp(15)
#    md_bg_color: (1, 0, 0, 0.4)
    PaletteControlButton:
        icon: 'blur-linear'
        size: (control_bar_.height, control_bar_.height)
        on_press:
            root.toggle_blend()
            self.icon = 'dots-grid' if self.icon == 'blur-linear' else 'blur-linear'
    PaletteControlButton:
        icon: 'swap-horizontal'
        size: (control_bar_.height, control_bar_.height)
        on_press: root.toggle_swap()
    PaletteControlButton:
        icon: 'reflect-horizontal'
        size: (control_bar_.height, control_bar_.height)
        on_press: root.toggle_mirror()
    PaletteControlButton:
        icon: 'checkbox-blank-outline'
        size: (control_bar_.height, control_bar_.height)
        on_press:
            root.toggle_select()
            self.icon = 'checkbox-marked-outline' if self.icon == 'checkbox-blank-outline' else 'checkbox-blank-outline'



<PaletteControlButton@MDIconButton>:
    size_hint: (None, None)
    theme_icon_color: 'Custom'
    icon_color: 'black'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.2
        Line:
            rounded_rectangle: self.x - dp(2), self.y - dp(2), self.width + dp(4), self.height + dp(4), dp(10), dp(10)